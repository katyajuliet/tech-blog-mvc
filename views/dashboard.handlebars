<section class="form-entry">
    <h3>Post Your Mighty Blog</h3>

  <form class="new-post-form" enctype="multipart/form-data">
        <div>
      <label for="post-img">[Your Fav Mighty Pup Image Always Added]</label>
    
    </div>
      <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-text">post Text</label>
      <input id="post-text" name="post-text" />
    </div>
    
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
    <section>
        <h2 class="posts-title h2">Your posts</h2>
        <div>
            {{#each posts as |post|}}
                <div class="edit_post_section">
                  {{> slice post edit =1 loggedIn = ../loggedIn}}
                    {{!-- {{> post-info post}}
                    <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a> --}}
                </div>
            {{/each}}
        </div>
    </section>
{{/if}}

<script src="/javascript/add-post.js"></script>
